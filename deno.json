{
  "name": "@timharek/openlibrary",
  "version": "2.0.0",
  "exports": "./mod.ts",
  "author": "Tim HÃ¥rek Andreassen <tim@harek.no>",
  "tasks": {
    "run": "deno run --allow-net=openlibrary.org src/cli.ts",
    "check": "deno fmt --check && deno lint",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts",
    "test": "deno test --allow-net=openlibrary.org"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.226.0",
    "zod": "npm:zod@^3.23.8"
  },
  "githooks": {
    "pre-commit": "check",
    "pre-push": "check"
  },
  "lint": {
    "include": [
      "src/",
      "types/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-slow-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "./"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "src/**/*.ts"
    ]
  },
  "exclude": [
    "**/*.md",
    "**/*.json"
  ]
}